{
  "variables": {
    "description": "Developer environment packer built for Viewzr",
    "company": "viewzr",
    "version": "2.0",
    "os": "Fedora",
    "os_version": "25",
    "iso_url": "https://download.fedoraproject.org/pub/fedora/linux/releases/25/Workstation/x86_64/iso/Fedora-Workstation-Live-x86_64-25-1.3.iso",
    "iso_checksum_url": "https://getfedora.org/static/checksums/Fedora-Workstation-25-1.3-x86_64-CHECKSUM",
    "iso_checksum_type": "sha256",
    "ftp_proxy": "{{ env `ftp_proxy` }}",
    "headless": "false",
    "http_proxy": "{{ env `http_proxy` }}",
    "https_proxy": "{{ env `https_proxy` }}",
    "no_proxy": "{{ env `no_proxy` }}",
    "rsync_proxy": "{{ env `rsync_proxy` }}",
    "update": "true",
    "kickstart": "cfg/ks-fedora25.cfg",
    "install_vagrant_key": "true",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Fedora_64",
      "vm_name": "{{ user `company` }}-{{ user `version` }}-dev",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url`}}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "1000s",
      "disk_size": 50000,
      "headless": "{{ user `headless`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ],
      "boot_command": [
        "<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter><enter>"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h now",
      "format": "ova",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "description": "Viewzr packer template for developer environment",
  "min_packer_version": "1.0.0",
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "UPDATE={{ user `update` }}",
        "INSTALL_VAGRANT_KEY={{ user `install_vagrant_key` }}",
        "SSH_USERNAME={{ user `ssh_username` }}",
        "SSH_PASSWORD={{ user `ssh_password` }}",
        "http_proxy={{ user `http_proxy` }}",
        "https_proxy={{ user `https_proxy` }}",
        "ftp_proxy={{ user `ftp_proxy` }}",
        "rsync_proxy={{user `rsync_proxy` }}",
        "no_proxy={{ user `no_proxy` }}"
      ],
      "scripts": [
        "scripts/sshd.sh",
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "tpl/Vagrantfile.tpl",
      "output": "box/{{.Provider}}/{{user `company`}}-{{user `version`}}-{{user `os`}}{{user `os_version`}}-dev.box"
    }
  ]
}
